                connection.on("ReceiveProductNameByMaxPrice", (data8) => {
                    $("#productNameByMaxPrice").text(data8);
                });
                connection.on("ReceiveProductNameByMinPrice", (data9) => {
                    $("#productNameByMinPrice").text(data9);
                });
                connection.on("ReceiveHamburgerPriceAvg", (data10) => {
                    $("#hamburgerPriceAvg").text(data10);
