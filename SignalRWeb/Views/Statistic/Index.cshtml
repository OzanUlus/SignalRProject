            $(document).ready(() => {

                var connection = new signalR.HubConnectionBuilder().withUrl("https://localhost:7233/SignalRHub").build();
                $("#connstatus").text(connection.state);
                connection.start().then(() => {
                    $("#connstatus").text(connection.state);
                    setInterval(() => {
                        connection.invoke("SendStatistic");
                       
                    }, 1000);
                }).catch((err) => { console.log(err) });

                connection.on("ReceiveCategoryCount", (data) => {
                    $("#categorycount").text(data);
                });
                connection.on("ReceiveProductCount", (data2) => {
                    $("#productcount").text(data2);
                });
                connection.on("ReceiveActiveCategoryCount", (data3) => {
                    $("#activeCategoryCount").text(data3);
                });
                connection.on("ReceivePassiveCategoryCount", (data4) => {
                    $("#passiveCategoryCount").text(data4);
                });
                connection.on("ReceiveProductCountByCategoryNameHamburger", (data5) => {
                    $("#productCountByCategoryNameHamburger").text(data5);
                });
                connection.on("ReceiveProductCountByCategoryNameDrink", (data6) => {
                    $("#productCountByCategoryNameDrink").text(data6);
                });
                connection.on("ReceiveProductPriceAvg", (data7) => {
