@model List<ResultFeatureDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Öne Çıkan Alan İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Öne Çıkan Alan Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Anasayfa da Öne Çıkan Alan ile ilgili işlemleri aşağıda gerçekleştirebilirsiniz.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Başlık 1</th>
                                    <th scope="col">Başlık 2</th>
                                    <th scope="col">Başlık 3</th>
                                    <th scope="col">Açıklama 1</th>
                                    <th scope="col">Açıklama 2</th>
                                    <th scope="col">Açıklama 3</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var feature in Model)
                                {
                                    <tr>
                                        <td>@feature.Id</td>
                                        <td>@feature.Title1</td>
                                        <td>@feature.Title2</td>
                                        <td>@feature.Title3</td>
                                        <td>@feature.Description1</td>
                                        <td>@feature.Description2</td>
                                        <td>@feature.Description3</td>
                                        <td><a href="/Slider/DeleteSlider/@feature.Id" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="/Slider/UpdateSlider/@feature.Id" class="btn btn-outline-warning">Güncelle</a></td>

                                    </tr>
                                }


                            </tbody>
                        </table>
                        <a href="/Slider/CreateSlider" class="btn btn-outline-primary">Öne Çıkan Alan Ekle</a>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>


