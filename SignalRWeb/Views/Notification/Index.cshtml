@model List<ResultNotificationDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Bildirim İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Bildirim Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Bildirimler ile ilgili işlemleri aşağıda gerçekleştirebilirsiniz.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Bildirim Adı</th>
                                    <th scope="col">Durum</th>
                                    <th scope="col">Tarih</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                    <th scope="col">Okundu Olarak İşaretle</th>
                                    <th scope="col">Okunmadı Olarak İşaretle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var notification in Model)
                                {
                                    count++;
                                    <tr>
                                        <th>@count</th>
                                        <td>@notification.Description</td>
                                        <td>@notification.Status</td>
                                        <td>@notification.Date</td>
                                        <td><a href="/Notification/DeleteNotification/@notification.Id" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="/Notification/UpdateNotification/@notification.Id" class="btn btn-outline-warning">Güncelle</a></td>
                                        <td><a asp-controller="notification" asp-action="NotificationStatusChangeFalse" asp-route-id="@notification.Id" class="btn btn-outline-dark">Okundu</a></td>
                                        <td><a asp-controller="notification" asp-action="NotificationStatusChangeTrue" asp-route-id="@notification.Id" class="btn btn-outline-success">Okunmadı</a></td>

                                    </tr>
                                }


                            </tbody>
                        </table>
                        <a href="/Notification/CreateNotification" class="btn btn-outline-primary">Bildirim Ekle</a>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>
