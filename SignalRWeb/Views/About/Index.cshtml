@model List<ResultAboutDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Anasayfa Hakkımızda İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Hakkımızda Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                           Hakkımızda alanı ile ilgili işlemleri burada yapabilirsiniz. Tema bütünlüğü için sadece 1 adet hakkımızda oluşturmalısınız.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Başlık</th>
                                    <th scope="col">Açıklama</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var about in Model)
                                {
                                    <tr>
                                        <td>@about.Id</td>
                                        <td>@about.Title</td>
                                        <td>@about.Description</td>
                                        <td><a href="/About/DeleteAbout/@about.Id" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="/About/UpdateAbout/@about.Id" class="btn btn-outline-warning">Güncelle</a></td>

                                    </tr>
                                }


                            </tbody>
                        </table>
                        <a href="/About/CreateAbout" class="btn btn-outline-primary">Hakkımda Ekle</a>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>
