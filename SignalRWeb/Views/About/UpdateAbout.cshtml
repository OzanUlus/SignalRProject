@model UpdateAboutDto
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Anasayfa Hakkımıda İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Anasayfa Hakkımızda Güncelleme</div>
                        </div>
                        <input type="hidden" asp-for="Id" />
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Title">Hakkımızda Başlığı Giriniz</label>
                                <input type="text" class="form-control" asp-for="Title" id="Title">

                            </div>
                            <div class="form-group">
                                <label for="ImageUrl">Görsel Url'ini Giriniz</label>
                                <input type="text" class="form-control" asp-for="ImageUrl" id="ImageUrl">

                            </div>
                            <div class="form-group">
                                <label for="Description">Açıklama Giriniz</label>
                                <textarea rows="5" class="form-control" asp-for="Description" id="Description"></textarea>

                            </div>

                        </div>
                        <div class="card-action">
                            <button class="btn btn-warning">Hakkımızda Güncelle</button>

                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>
