@model List<ResultTestimonialDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Müşteri Yorum İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Müşteri Yorum Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Müşterilerin yaptığı yorumlar ile ilgili işlemleri aşağıda gerçekleştirebilirsiniz.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Ad Soyad</th>
                                    <th scope="col">Durum</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var testimonial in Model)
                                {
                                    count++;
                                    <tr>
                                        <th>@count</th>
                                        <td>@testimonial.Name</td>
                                        <td>@testimonial.Status</td>
                                        <td><a href="/Testimonial/DeleteTestimonial/@testimonial.Id" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="/Testimonial/UpdateTestimonial/@testimonial.Id" class="btn btn-outline-warning">Güncelle</a></td>

                                    </tr>
                                }


                            </tbody>
                        </table>
                        <a href="/Testimonial/CreateTestimonial" class="btn btn-outline-primary">Yeni Müşteri Yorumu Girişi </a>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>

