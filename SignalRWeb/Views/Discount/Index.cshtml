@model List<ResultDiscountDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Günün İndirim İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Günün İndirim Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Günün İndirimli Ürünleri Aşağıda Yer Almaktadır. Tema Bütünlüğü İçin 2 Adet İndirimli Ürün Girişi Yapınız
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Ürün</th>
                                    <th scope="col">İndirim Oranı</th>
                                    <th scope="col">Durum</th>
                                    <th scope="col">Aktif Yap</th>
                                    <th scope="col">Pasif Yap</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var discount in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>@count</td>
                                        <td>@discount.Title</td>
                                        <td>@discount.Amount</td>
                                        <td>@discount.Status</td>
                                        <td><a href="/Discount/ChangeStatusTrue/@discount.Id" class="btn btn-outline-success">Aktifleştir</a></td>
                                        <td><a href="/Discount/ChangeStatusFalse/@discount.Id" class="btn btn-outline-dark">Pasifleştir</a></td>
                                        <td><a href="/Discount/DeleteDiscount/@discount.Id" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="/Discount/UpdateDiscount/@discount.Id" class="btn btn-outline-warning">Güncelle</a></td>

                                    </tr>
                                }


                            </tbody>
                        </table>
                        <a href="/Discount/CreateDiscount" class="btn btn-outline-primary">İndirimli Ürün Ekle</a>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>


